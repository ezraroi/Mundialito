@{
    Layout = null;
    Response.Headers["X-UA-Compatible"] = "IE=10";
}
<!DOCTYPE html>
<html lang="en" ng-app="mundialitoApp">
<head>
    <meta charset="utf-8" />
    <title>Mundialito</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <base href="/" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=" + @System.Web.Configuration.WebConfigurationManager.AppSettings["FacebookAppId"]
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <!-- App Loading message -->
    <div class="loading" ng-show="mundialitoApp.loading || mundialitoApp.authenticating">
        <div class="text-center">
            <h3><i class="fa fa-spin fa-spinner fa-lg"></i> Loading Mundialito...</h3>
        </div>
    </div>
    <!-- End of App Loading message -->
    <!-- Main Content -->
    <div class="body-content ng-cloak" ng-hide="mundialitoApp.loading || mundialitoApp.authenticating">
        <!-- Fixed navbar -->
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand"><i class="fa fa-trophy" style="color: gold;"></i> Mundialito</a>
                </div>
                <div ng-if="security.user" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li active-nav><a href="/"><i class="fa fa-tachometer"></i> Dashboard</a></li>
                        <li active-nav><a href="/bets_center" class="hidden-xs"><i class="fa fa-money"></i> Bets Center</a></li>
                        <li active-nav><a href="/games"><i class="fa fa-gamepad"></i> Games</a></li>
                        <li active-nav><a href="/teams"><i class="fa fa-users"></i> Teams</a></li>
                        <li active-nav><a href="/stadiums"><i class="fa fa-home"></i> Stadiums</a></li>
                        <li active-nav access-level="Admin" class="hidden-xs"><a href="/manage_users"><i class="fa fa-tasks"></i> Admin Panel</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown" on-toggle="toggled(open)">
                            <a href="#" class="dropdown-toggle"><i class="fa fa-user"></i> {{security.user.userName}} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="/users/{{security.user.userName}}"><span class="fa fa-book"></span> Profile</a></li>
                                <li><a href="/manage"><span class="fa fa-cog"></span> Account</a></li>
                                <li class="divider"></li>
                                <li><a href="#" ng-click="security.logout()"><span class="fa fa-power-off"></span> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- End of Fixed navbar -->
        <div class="container" ng-hide="mundialitoApp.message != null">
            <section id="body" ng-view ng-animate="enter"></section>
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-xs-6">
                            <span>&copy; @DateTime.Now.Year - Mundialito</span>
                        </div>
                        <div class="col-md-4 text-center hidden-xs">
                            <a href="https://github.com/ezraroi/Mundialito" target="_self">Mundilaito at <i class="fa fa-github"></i> GitHub</a>
                        </div>
                        <div class="col-md-4 col-xs-6">
                            <span class="pull-right"><a href="/help" target="_self">Mundialito REST API</a></span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <!-- Content Loading message -->
        <div class="ng-cloak" ng-show="mundialitoApp.message">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" style="margin-top: 10px;">
                    <h4 class="text-center"><i class="fa fa-spin fa-spinner fa-lg"></i>  <span ng-bind="mundialitoApp.message"></span></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-md-offset-5 col-xs-6 col-xs-offset-3">
                    <div class="progress progress-striped active">
                        <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Content Loading message -->
    </div>
    <!-- End of Main Content -->
    <div class="appAlerts ng-cloak">
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="alert.close(alert, $index)">
            <span class="message" ng-bind-html="alert.message"></span>
        </alert>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/external")
    @Scripts.Render("~/bundles/app")

</body>
</html>
